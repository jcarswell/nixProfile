#!/bin/bash
set -x

pushd ${JPRO} > /dev/null

echo "Uno Mommento while we do a sync"
shift $@

git diff-index --quiet HEAD --

## Increment version and commit changes
if [[ "$?" == "1" ]]; then
    . version
    nixProfile += .1
    echo "export nixProfile=" $nixProfile > version

    git add *
    if [[ "$#" == "1" ]]; then
        git commit -a -m '${@}'
    else
        git commit -a -m "Someone made a change"
    fi
else
    echo "nothing to commit ... syncing"
fi

git push
git pull

popd > /dev/null
# vim: ts=4:sw=4:syntax=sh
