#!/bin/bash
#set -x

pushd ${JPRO} > /dev/null

. version
VER=$nixProfile
MSG="An update has occured"
LASTVAL=""

## Read in agruments
for x in "$@"; do
    if [[ "${x}" == "-v" ]]; then
        LASTVAL="$x"
    elif [[ "${x}" == "-m" ]]; then
        LASTVAL="$x"
    else
        if [[ "${LASTVAL}" == "-v" ]]; then
            VER=$x
        elif [[ "${LASTVAL}" == "-m" ]]; then
            MSG="${x}"
        fi
    fi
done

echo "Uno Mommento while we do a sync"
git diff-index --quiet HEAD --

## Increment version and commit changes
if [[ "$?" == "1" ]]; then
    
    # Update Version number
    if [[ $VER == $nixProfile ]]; then
        VER+=0.1
    fi
    echo "export nixProfile="$VER > version
    echo "#This is an automatically generated file do not update it manually" >> version

    git add *
    git commit -m "${MSG}"
else
    echo "nothing to commit ... syncing"
fi

git push
git pull

popd > /dev/null
# vim: ts=4:sw=4:syntax=sh
